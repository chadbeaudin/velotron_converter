<?xml version="1.0"?>
<Container>
  <Name>velotron-converter</Name>
  <Repository>bigtimber/velotron-converter:latest</Repository>
  <Registry>dockerhub</Registry>
  <Network>bridge</Network>
  <Project>https://github.com/chadbeaudin/velotron_converter</Project>
  <Overview>Monitors Velotron .pwx files and converts to .tcx/.fit</Overview>
  <Description>Monitors /data/original (host /mnt/user/dropBox/original) and converts .pwx files to Strava-compatible .tcx and .fit files.</Description>

  <Config>
    <Config Name="Monitor Directory" Target="/veloMonitor" Default="/mnt/user/dropBox" Mode="rw" Description="Select your Unraid Share/Folder here. This maps it to '/veloMonitor' inside the container." Type="Path" Display="always" Required="true" Mask="false"/>
    
    <Config Name="App Data Directory" Target="/app" Default="/mnt/user/appdata/velotron_converter" Mode="rw" Description="Directory for application data" Type="Path" Display="advanced" Required="true" Mask="false"/>

    <Config Name="Internal Container Path (DO NOT CHANGE)" Target="MONITOR_PATH" Default="/veloMonitor" Mode="" Description="This tells the script to look at '/veloMonitor'. Unraid maps your folder to '/veloMonitor' automatically." Type="Variable" Display="advanced" Required="true" Mask="false"/>

    <Config Name="Timezone" Target="TZ" Default="America/Denver" Mode="" Description="Container Timezone" Type="Variable" Display="always" Required="false" Mask="false"/>

    <Config Name="PUID" Target="PUID" Default="99" Mode="" Description="User ID to run as (Default 99 for Unraid)" Type="Variable" Display="advanced" Required="true" Mask="false"/>
    <Config Name="PGID" Target="PGID" Default="100" Mode="" Description="Group ID to run as (Default 100 for Unraid)" Type="Variable" Display="advanced" Required="true" Mask="false"/>

    <Config Name="Strava Client ID" Target="STRAVA_CLIENT_ID" Default="" Mode="" Description="Optional: your Strava Client ID" Type="Variable" Display="always" Required="false" Mask="false"/>
    <Config Name="Strava Client Secret" Target="STRAVA_CLIENT_SECRET" Default="" Mode="" Description="Optional: your Strava Client Secret" Type="Variable" Display="always" Required="false" Mask="true"/>
    <Config Name="Strava Refresh Token" Target="STRAVA_REFRESH_TOKEN" Default="" Mode="" Description="Optional: your Strava Refresh Token" Type="Variable" Display="always" Required="false" Mask="true"/>

    <Label>
      <Name>com.unraid.docker.managed</Name>
      <Value>true</Value>
    </Label>
    <Label>
      <Name>com.unraid.docker.webui</Name>
      <Value>false</Value>
    </Label>
  </Config>

  <Icon>https://raw.githubusercontent.com/chadbeaudin/velotron_converter/refs/heads/master/logo.png</Icon>

  <Extra>
    <Display>
      <DockerHub>bigtimber/velotron-converter</DockerHub>
    </Display>
    <Maintainer>https://github.com/chadbeaudin/velotron_converter</Maintainer>
  </Extra>
</Container>
